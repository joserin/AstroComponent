---
interface Props {
    class?: string;
    [x: string]: any;
}
const { class: className, ...rest } = Astro.props;
---
<div class:list={[className, "container-indicator"]} {...rest}>
    <slot/>
</div>

<style>
    .container-indicator{
        position: relative;
        display: inline-flex;
        align-items: center;
        text-align: center;
    }
</style>