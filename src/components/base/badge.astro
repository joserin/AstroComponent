---
interface Props {
    class?: string;
    [x: string]: any;
}

const defaulClass='default w-10 h-10 bg-blue-700';
const { class: className= defaulClass, ...rest } = Astro.props;
---

<div {...rest} class:list={[className]} >
    <slot/>
</div>

<style>
    .default{
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 0.2rem 0.1rem;
        border-radius: 9999px;
    }
</style>
