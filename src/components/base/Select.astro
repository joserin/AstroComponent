---
interface Props {
  values?:string[];
  title?: string;
  class?: string;
  [x: string]: any;
}

const defaulClass='focus:ring-blue-500 default';
const { title = 'Select', values = [], class: className= defaulClass, ...rest } = Astro.props;
---

<select {...rest} class={className} aria-label="select-label">
  <slot>
    {
      values.length > 0 &&  <option disabled selected>{title}</option>
    }
    {
      values?.map((element) =>
        <option value={element.toLowerCase()}>{element}</option>
      )
    }
  </slot>
</select>

<style>
  .default{
    background-color: rgb(249 250 251);
    border: 1px white solid;
    color: black;
    font-size: 0.875rem;
    line-height: 1.25rem;
    border-radius: 0.5rem;
    display: block;
    width: 100%;
    padding: 0.5rem;
  }
  .default:focus{
    border-color: rgb(59 130 246);
  }
</style>
