---
interface Props {
    class?: string;
    [x: string]: any;
}

const defaulClass='default';
const { class: className= defaulClass, ...rest } = Astro.props;
---

<div {...rest} class:list={[className, 'resizable-style']}>
    <slot/>
</div>

<style>
    .default {
        height: 14rem;
        width: 20rem;
        background: #333;
        border: 3px solid #666;
        display: flex;
    }
    .resizable-style{
        position: relative;
        max-width: 100%;
        max-height: 100%;
    }
</style>