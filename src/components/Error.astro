---
import Action from "./Action.astro";
import Typography from "./Typography.astro"

const { error, message, contextMessage } = Astro.props
---

<section
	class="m-auto flex w-full h-full flex-col place-items-center items-center justify-center">

	<div class="text-center ">
		<Typography as="h1" variant="atomic-title" color="primary" class:list={"mb-10 font-bold"}>
            error {error}
        </Typography>
        <Typography as="h2" variant="h2" color="neutral" class:list={"text-white"}>
            <p>{message}</p>
        </Typography>
        <p class="mt-5 text-xl">{contextMessage}</p>
    
        <Action class="mt-7 text-center" href="/" aria-label="Return to main page" as="a">
            Return to Home
        </Action>
	</div>
</section>