---
interface Props {
    identifier:string;
    class?: string;
    [x: string]: any;
}
 
const defaultClass="default";
const { identifier, class: className = defaultClass, ...rest } = Astro.props;
---

<label {...rest} for={identifier} class="default-background peer-checked:block"></label>
<slot>
    <span class={className} id={identifier}>onclick</span>
</slot>

<style>
    .default-background{
        position: fixed;
        width: 100%;
        height: 100%;
        background-color: rgb(0 0 0 / 0.5);
        z-index: 1;
        display: none;
        top: 0px;
        left: 0px;
    }
</style>