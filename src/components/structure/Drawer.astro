---
interface Props {
    class?: string;
    [x: string]: any;
}

const defaultClass="default";
const { class: className = defaultClass, ...rest } = Astro.props;
---

<div class={className}>
    <input class="peer input-element" type="checkbox" {...rest} aria-label="drawer-input"/>
    <slot/>
</div>

<style>
    .input-element{
        position: absolute;
        top: 0px;
        left: 0px;
        width: 100%;
        height: 100%;
        cursor: pointer;
        opacity: 0;
        z-index: 1;
    }
    div{
        position: relative;
    }
    .default{
        display: inline-block;
        padding: 0.5rem 0.25rem;
        background-color: rgb(62, 62, 62);
        border-radius: 0.5rem;
    }
    .default:hover{
        background-color: rgb(82 82 82)
    }
</style>