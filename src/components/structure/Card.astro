---
interface Props {
  class?: string;
  [x: string]: any;
}

const defaulClass='default bg-blue-400 hover:bg-blue-200 rounded transition focus-visible:ring-2 ring-offset-2 ring-gray-200';
const { class: className = defaulClass, ...rest } = Astro.props;
---

<div {...rest}  class={className}>
  <slot/>
</div>

<style>
  .default{
    width: fit-content;
    display: flex;
    justify-content: center;
    align-items: center;
    overflow: hidden;
    padding-bottom: 0.5rem;
  }
</style>
