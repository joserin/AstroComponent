---
import Layout from '../../layouts/Layout.astro';
import Timeline from '../../components/structure/Timeline.astro';
import LineElement from '../../components/structure/Line-Element.astro';
import LineContent from '../../components/structure/Line-Content.astro';
import SectionTab from '../../components/sectionTab.astro';
import Scroll from '../../components/structure/Scroll.astro';

import Component from '../../i18n/structure/timeline/code-component.md';
import Css from '../../i18n/structure/timeline/code-css.md';
import OneImplementacion from '../../i18n/structure/timeline/code-one.md';
import TwoImplementacion from '../../i18n/structure/timeline/code-two.md';
import ThreeImplementacion from '../../i18n/structure/timeline/code-three.md';

const defaultTitle = ['Preview', 'Implementation'];
const basicTitle = ['Information','Component', 'CSS'];
---
<Layout 
    title="Components Timeline."
    description='Component UI Timeline to astro'>
    <div class="maqueta">
        <header>
            <h2 class=" text-2xl font-bold">Timeline</h2>
            <p>Timeline component shows a list of events in chronological order.</p>
        </header>
        <SectionTab titles={basicTitle} slotName={['preview', 'component', 'css']} class='h-[19.8rem]'>
            <section slot="preview" class="flex flex-col gap-2 h-72 p-3 my-3 fondo-previsual">
                <Scroll class='w-full h-72'>
                    <div class="flex flex-col gap-2">
                        <p>Component TimeLine</p>
                        <h3>Props</h3>
                        <ul>
                            <li>class: Custom class name for the list.</li>
                            <li>...rest: Other arbitrary props for customization.</li>
                        </ul>
                        <h3>Template</h3>
                        <ul>
                            <li>Renders an ordered list with the ol tag, allowing nested content through a slot.</li>
                        </ul>
                        <h3>Styles</h3>
                        <ul>
                            <li>Sets the display to flex, likely for styling purposes.</li>
                        </ul>
                        <p>Component LineElement</p>
                        <h3>Props</h3>
                        <ul>
                            <li>class: Custom class name for the list item.</li>
                            <li>...rest: Other arbitrary props for customization.</li>
                        </ul>
                        <h3>Template</h3>
                        <ul>
                            <li>Renders a list item with the li tag, allowing nested content through a slot.</li>
                        </ul>
                        <h3>Styles</h3>
                        <ul>
                            <li>Sets the position to relative, likely for positioning child elements.</li>
                        </ul>
                        <p>Component LineContent</p>
                        <ul>
                            <li>class: Custom class name for the divider.</li>
                            <li>endLine: Boolean to determine whether to display the divider line (default: false).</li>
                            <li>...rest: Other arbitrary props for customization.</li>
                        </ul>
                        <h3>Template</h3>
                        <ul>
                            <li>
                                Renders a span containing the slot content and optionally a div for 
                                the divider line based on the endLine prop.
                            </li>
                        </ul>
                        <h3>Styles</h3>
                        <ul>
                            <li>Sets the display to flex and aligns items center for the span.</li>
                            <li>
                                Styles the default divider with a white background, display: none by default, 
                                and responsive display and color based on media queries.
                            </li>
                            <li>Styles the horizontal divider with full width and a small height.</li>
                            <li>Styles the vertical divider with full height and a small width.</li>
                        </ul>
                        
                    </div>
                </Scroll>
            </section>
            <section slot="component" class="max-h-72">
                <Scroll class='w-full h-72'>
                    <Component />
                </Scroll>
            </section>
            <section slot="css" class="max-h-72">
                <Scroll class='w-full h-72'>
                    <Css />
                </Scroll>
            </section>
        </SectionTab>
        <SectionTab titles={defaultTitle} slotName={['preview', 'implementation']} class='h-[16.8rem]'>
            <section slot="preview" class="flex gap-1 justify-center items-center h-60 fondo-previsual">
                <Timeline class='w-[95%]'>
                    <LineElement>
                        <LineContent>
                            <div class="z-10 flex items-center justify-center w-6 h-6 bg-blue-100 rounded-full ring-0 ring-white dark:bg-blue-900 sm:ring-8 dark:ring-gray-900 shrink-0">
                                <svg class="w-2.5 h-2.5 text-blue-800 dark:text-blue-300" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                                    <path d="M20 4a2 2 0 0 0-2-2h-2V1a1 1 0 0 0-2 0v1h-3V1a1 1 0 0 0-2 0v1H6V1a1 1 0 0 0-2 0v1H2a2 2 0 0 0-2 2v2h20V4ZM0 18a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V8H0v10Zm5-8h10a1 1 0 0 1 0 2H5a1 1 0 0 1 0-2Z"/>
                                </svg>
                            </div>
                        </LineContent>
                        <div class="mt-3 sm:pe-8">
                            <h3 class="text-lg font-semibold text-white">Flowbite Library v1.0.0</h3>
                            <time class="block mb-2 text-sm font-normal leading-none text-gray-400 dark:text-gray-500">Released on December 2, 2021</time>
                            <p class="text-base font-normal text-gray-500 dark:text-gray-400">Get started with dozens of web components and interactive elements.</p>
                        </div>
                    </LineElement>
                    <LineElement>
                        <LineContent>
                            <div class="z-10 flex items-center justify-center w-6 h-6 bg-blue-100 rounded-full ring-0 ring-white dark:bg-blue-900 sm:ring-8 dark:ring-gray-900 shrink-0">
                                <svg class="w-2.5 h-2.5 text-blue-800 dark:text-blue-300" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                                    <path d="M20 4a2 2 0 0 0-2-2h-2V1a1 1 0 0 0-2 0v1h-3V1a1 1 0 0 0-2 0v1H6V1a1 1 0 0 0-2 0v1H2a2 2 0 0 0-2 2v2h20V4ZM0 18a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V8H0v10Zm5-8h10a1 1 0 0 1 0 2H5a1 1 0 0 1 0-2Z"/>
                                </svg>
                            </div>
                        </LineContent>
                        <div class="mt-3 sm:pe-8">
                            <h3 class="text-lg font-semibold text-white">Flowbite Library v1.2.0</h3>
                            <time class="block mb-2 text-sm font-normal leading-none text-gray-400 dark:text-gray-500">Released on December 23, 2021</time>
                            <p class="text-base font-normal text-gray-500 dark:text-gray-400">Get started with dozens of web components and interactive elements.</p>
                        </div>
                    </LineElement>
                    <LineElement>
                        <LineContent>
                            <div class="z-10 flex items-center justify-center w-6 h-6 bg-blue-100 rounded-full ring-0 ring-white dark:bg-blue-900 sm:ring-8 dark:ring-gray-900 shrink-0">
                                <svg class="w-2.5 h-2.5 text-blue-800 dark:text-blue-300" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                                    <path d="M20 4a2 2 0 0 0-2-2h-2V1a1 1 0 0 0-2 0v1h-3V1a1 1 0 0 0-2 0v1H6V1a1 1 0 0 0-2 0v1H2a2 2 0 0 0-2 2v2h20V4ZM0 18a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V8H0v10Zm5-8h10a1 1 0 0 1 0 2H5a1 1 0 0 1 0-2Z"/>
                                </svg>
                            </div>
                        </LineContent>
                        <div class="mt-3 sm:pe-8">
                            <h3 class="text-lg font-semibold text-white">Flowbite Library v1.3.0</h3>
                            <time class="block mb-2 text-sm font-normal leading-none text-gray-400 dark:text-gray-500">Released on January 5, 2022</time>
                            <p class="text-base font-normal text-gray-500 dark:text-gray-400">Get started with dozens of web components and interactive elements.</p>
                        </div>
                    </LineElement>
                </Timeline>
            </section>
            <section slot="implementation" >
                <Scroll class='w-full h-60'>
                    <OneImplementacion />
                </Scroll>
            </section>
        </SectionTab>
        <SectionTab titles={defaultTitle} slotName={['preview', 'implementation']} class='h-[16.8rem]'>
            <section slot="preview" class="flex gap-1 justify-center items-center h-60 fondo-previsual">
                <Timeline class='default w-fit justify-center'>
                    <LineElement class='w-56'>
                        <span>First Macintosh computer</span>
                        <LineContent class='bg-red-600 horizontal'>
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-5 h-5">
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z" clip-rule="evenodd" />
                            </svg>
                        </LineContent>
                    </LineElement>
                    <LineElement class='w-20'>
                        <span>iMac</span>
                        <LineContent class='bg-red-600 horizontal'>
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-5 h-5">
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z" clip-rule="evenodd" />
                            </svg>
