---
import Layout from '../../layouts/Layout.astro';
import Swap from '../../components/base/Swap.astro';
import ChatBubbles from '../../components/base/ChatBubbles.astro';
import Avatar from '../../components/base/Avatar.astro';
import SectionTab from '../../components/sectionTab.astro';
import Scroll from '../../components/structure/Scroll.astro';

import Component from '../../i18n/base/chatbubble/code-component.md';
import Css from '../../i18n/base/chatbubble/code-css.md';
import OneImplementacion from '../../i18n/base/chatbubble/code-one.md';
import TwoImplementacion from '../../i18n/base/chatbubble/code-two.md';
import ThreeImplementacion from '../../i18n/base/chatbubble/code-three.md';

const defaultTitle = ['Preview', 'Implementation'];
const basicTitle = ['Information','Component', 'CSS'];
---
<Layout 
    title="Components ChatBubble."
    description='Component UI ChatBubble to astro'>
    <div class="maqueta">
        <header>
            <h2 class=" text-2xl font-bold">Chat bubble</h2>
            <p>Chat bubbles are used to show one line of conversation and all its data, including the author image, author name, time, etc.</p>
        </header>
        <SectionTab titles={basicTitle} slotName={['preview', 'component', 'css']} class='h-[19.8rem]'>
            <section slot="preview" class="flex flex-col gap-2 h-72 p-3 my-3 fondo-previsual">
                <Scroll class='w-full h-72'>
                    <div class="flex flex-col gap-2">
                        <h3>Props</h3>
                        <ul>
                            <li>class?: string: An optional string property to assign a CSS class to the element.</li>
                            <li>
                                [x:string]: any: An indexed type that allows any other property to be passed to the element, 
                                which is useful for custom HTML properties or third-party component properties.
                            </li>
                        </ul>
                        <h3>Template</h3>
                        <ul>
                            <li> Creates a div element and assigns: ...rest and class=className</li>
                            <li> 
                                slot: A special Astro element that indicates where content placed 
                                inside this component will be rendered when it is used.
                            </li>
                        </ul>
                        <h3>Styles</h3>
                        <ul>
                            <li>
                                .default: Defines a CSS class with basic styles (black background, white text, rounded edges and padding).                        </li>
                            <li>
                                background-color, color, border-radius, padding: Standard CSS properties to customize the appearance 
                                of the element.
                            </li>
                        </ul>
                    </div>
                </Scroll>
            </section>
            <section slot="component" class="max-h-72">
                <Scroll class='w-full h-72'>
                    <Component />
                </Scroll>
            </section>
            <section slot="css" class="max-h-72">
                <Scroll class='w-full h-72'>
                    <Css />
                </Scroll>
            </section>
        </SectionTab>
        <SectionTab titles={defaultTitle} slotName={['preview', 'implementation']} class='h-[13.8rem]'>
            <section slot="preview" class="flex gap-1 justify-center items-center m-1 h-48 fondo-previsual">
                <ChatBubbles>
                    <div>It was said that you would, destroy the Sith, not join them.</div>
                </ChatBubbles>
            </section>
            <section slot="implementation" >
                <Scroll class='w-full h-48'>
                    <OneImplementacion />
                </Scroll>
            </section>
        </SectionTab>
        <SectionTab titles={defaultTitle} slotName={['preview', 'implementation']} class='h-[16.8rem]'>
            <section slot="preview" class="flex gap-1 justify-center items-center m-1 h-60 fondo-previsual">
                <Avatar>
                    <img class="w-20 h-20 rounded-full" src="/img-1.webp" alt="">
                </Avatar>
                <ChatBubbles class='flex flex-col bg-green-700 p-3 w-[400px] rounded-xl gap-3'>
                    <header>
                        <h4 class="font-bold">Bonnie Green</h4>
                    </header>
                    <div>
                        <p>That's awesome. I think our users will really appreciate the improvements.</p>
                    </div>
                    <footer>
                        <p>Delivered</p>
                    </footer>
                </ChatBubbles>
            </section>
            <section slot="implementation" >
                <Scroll class='w-full h-60'>
                    <TwoImplementacion />
                </Scroll>
            </section>
        </SectionTab>
        <SectionTab titles={defaultTitle} slotName={['preview', 'implementation']} class='h-[16.8rem]'>
            <section slot="preview" class="flex gap-1 justify-center items-center m-1 h-60 fondo-previsual">
                <Avatar class='w-10 h-10'>
                    <img class=" rounded-full" src="/img-2.webp" alt="">
                </Avatar>
                <ChatBubbles class='flex flex-col bg-blue-300 p-3 w-96 rounded-xl gap-3 h-fit text-black font-semibold'>
                    <header class='flex gap-2'>
                        <h4 class="font-bold">Boby dogs</h4>
                        <span>1:30</span>
                    </header>
                    <main class='flex gap-5'>
                        <Swap class='w-10 h-10 flex justify-center items-center rounded-xl'>
                            <svg slot="first-state" xmlns="http://www.w3.org/2000/svg" class="icon" width="44" height="44" viewBox="0 0 24 24" stroke-width="1.5" stroke="#2c3e50" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                <path d="M6 5m0 1a1 1 0 0 1 1 -1h2a1 1 0 0 1 1 1v12a1 1 0 0 1 -1 1h-2a1 1 0 0 1 -1 -1z" />
                                <path d="M14 5m0 1a1 1 0 0 1 1 -1h2a1 1 0 0 1 1 1v12a1 1 0 0 1 -1 1h-2a1 1 0 0 1 -1 -1z" />
                            </svg>
                            <svg slot="second-state" xmlns="http://www.w3.org/2000/svg" class="icon" width="44" height="44" viewBox="0 0 24 24" stroke-width="1.5" stroke="#000000" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                <path d="M7 4v16l13 -8z" />
                            </svg>
                        </Swap>
                        <picture>
                            <svg aria-hidden="true" class="w-[145px] md:w-[185px] md:h-[40px]" viewBox="0 0 185 40" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <rect y="17" width="3" height="6" rx="1.5" fill="#6B7280"/>
                                <rect x="7" y="15.5" width="3" height="9" rx="1.5" fill="#6B7280"/>
                                <rect x="21" y="6.5" width="3" height="27" rx="1.5" fill="#6B7280"/>
                                <rect x="14" y="6.5" width="3" height="27" rx="1.5" fill="#6B7280"/>
                                <rect x="28" y="3" width="3" height="34" rx="1.5" fill="#6B7280"/>
                                <rect x="35" y="3" width="3" height="34" rx="1.5" fill="#6B7280"/>
                                <rect x="42" y="5.5" width="3" height="29" rx="1.5" fill="#6B7280"/>
