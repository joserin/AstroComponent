---
import Layout from '../../layouts/Layout.astro';
import Tooltip from '../../components/base/Tooltip.astro';
import SectionTab from '../../components/sectionTab.astro';
import Scroll from '../../components/structure/Scroll.astro';

import Component from '../../i18n/base/tooltip/code-component.md';
import Css from '../../i18n/base/tooltip/code-css.md';
import OneImplementacion from '../../i18n/base/tooltip/code-one.md';
import TwoImplementacion from '../../i18n/base/tooltip/code-two.md';
import ThreeImplementacion from '../../i18n/base/tooltip/code-three.md';
import FourImplementacion from '../../i18n/base/tooltip/code-four.md';

const defaultTitle = ['Preview', 'Implementation'];
const basicTitle = ['Information','Component', 'CSS'];
---
<Layout 
    title="Components Tooltip."
    description='Component UI Tooltip to astro'>
    <div class="maqueta">
        <header>
            <h2 class=" text-2xl font-bold">Tooltip</h2>
            <p>Tooltip can be used to show a message when hovering over an element.</p>
        </header>
        <SectionTab titles={basicTitle} slotName={['preview', 'component', 'css']} class='h-[19.8rem]'>
            <section slot="preview" class="flex flex-col gap-2 h-72 p-3 my-3 fondo-previsual">
                <Scroll class='w-full h-72'>
                    <div class="flex flex-col gap-2">
                        <h3>Props</h3>
                        <ul>
                            <li>
                                class: An optional string prop that allows users to provide custom CSS classes to the tooltip.
                            </li>
                            <li>
                                rest: A spread operator that allows for passing additional props to the component,
                                which can be useful for custom attributes or other purposes.
                            </li>
                        </ul>
                        <h3>Template</h3>
                        <ul>
                            <li>
                                Outer div: The main container for the tooltip. It positions the tooltip as an 
                                inline-block element relative to its content.
                            </li>
                            <li>
                                Inner main element: This element contains the actual tooltip content and has the 
                                tooltipop class for styling. It's positioned absolutely, hidden by default, and will become visible on hover.
                            </li>
                            <li>
                                First slot: This slot is used to render the content of the tooltip.
                            </li>
                            <li>
                                Second slot: This slot is likely intended for triggering the tooltip. 
                                It's a generic slot that can be used to place any element that will trigger the tooltip's appearance.
                            </li>
                        </ul>
                        <h3>Styles</h3>
                        <ul>
                            <li>div: Sets the tooltip container as an inline-block element with relative positioning.</li>
                            <li>
                                main: Styles the tooltip content. It's positioned absolutely, 
                                has a higher z-index to ensure it appears above other elements, and is initially hidden.
                            </li>
                            <li>
                                .default: Defines the default styling for the tooltip, including position, background color,
                                padding, and dimensions.
                            </li>
                            <li>
                                .tooltip:hover .tooltipop: This CSS selector ensures that the tooltip becomes visible 
                                when hovering over the .tooltip element.
                            </li>
                        </ul>
                    </div>
                </Scroll>
            </section>
            <section slot="component" class="max-h-72">
                <Scroll class='w-full h-72'>
                    <Component />
                </Scroll>
            </section>
            <section slot="css" class="max-h-72">
                <Scroll class='w-full h-72'>
                    <Css />
                </Scroll>
            </section>
        </SectionTab>
        <SectionTab titles={defaultTitle} slotName={['preview', 'implementation']} class='h-[15.8rem]'>
            <section slot="preview" class="flex gap-1 justify-center items-center h-56 fondo-previsual">
                <Tooltip>
                    <p>this is a good blue</p>
                    <div slot="content">
                        here
                    </div>
                </Tooltip>
            </section>
            <section slot="implementation" >
                <Scroll class='w-full h-56'>
                    <OneImplementacion />
                </Scroll>
            </section>
        </SectionTab>
        <SectionTab titles={defaultTitle} slotName={['preview', 'implementation']} class='h-[15.8rem]'>
            <section slot="preview" class="flex gap-1 justify-center items-center h-56 fondo-previsual">
                <Tooltip class='bg-blue-500 bottom-[105%] p-2 w-28 flex justify-center items-center'>
                    show tooltip on top 
                    <div slot="content">
                        here
                    </div>
                </Tooltip>
            </section>
            <section slot="implementation" >
                <Scroll class='w-full h-56'>
                    <TwoImplementacion />
                </Scroll>
            </section>
        </SectionTab>
        <SectionTab titles={defaultTitle} slotName={['preview', 'implementation']} class='h-[15.8rem]'>
            <section slot="preview" class="flex gap-1 justify-center items-center h-56 fondo-previsual">
                <Tooltip class='bg-white top-[105%] left-16' >
                    show tooltip on bottom
                    <div slot="content">
                        <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" stroke-width="1.5" stroke="#ff2825" fill="none" stroke-linecap="round" stroke-linejoin="round">
                            <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                            <path d="M15.349 5.349l3.301 3.301a1.2 1.2 0 0 1 0 1.698l-.972 .972a7.5 7.5 0 1 1 -5 -5l.972 -.972a1.2 1.2 0 0 1 1.698 0z" />
                            <path d="M17 7l1.293 -1.293a2.414 2.414 0 0 0 .707 -1.707a1 1 0 0 1 1 -1h1" />
                            <path d="M7 13a3 3 0 0 1 3 -3" />
                        </svg>
                    </div>
                </Tooltip>
            </section>
            <section slot="implementation" >
                <Scroll class='w-full h-56'>
                    <ThreeImplementacion />
                </Scroll>
            </section>
        </SectionTab>
        <SectionTab titles={defaultTitle} slotName={['preview', 'implementation']} class='h-[15.8rem]'>
            <section slot="preview" class="flex gap-1 justify-center items-center h-56 fondo-previsual">
                <Tooltip  class='right-[105%] text-green-300 p-1 -top-3'>
                    <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" stroke-width="1.5" stroke="#00b341" fill="none" stroke-linecap="round" stroke-linejoin="round">
                        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                        <path d="M12 12m-10 0a10 7 0 1 0 20 0a10 7 0 1 0 -20 0" />
                        <path d="M9 12c0 3.866 1.343 7 3 7s3 -3.134 3 -7s-1.343 -7 -3 -7s-3 3.134 -3 7z" />
                        <path d="M6.415 6.191c-.888 .503 -1.415 1.13 -1.415 1.809c0 1.657 3.134 3 7 3s7 -1.343 7 -3c0 -.678 -.525 -1.304 -1.41 -1.806" />
                    </svg>
                    <div slot="content">
                        Brand
                    </div>
                </Tooltip>
            </section>
            <section slot="implementation" >
                <Scroll class='w-full h-56'>
                    <FourImplementacion />
                </Scroll>
            </section>
        </SectionTab>
    </div>
</Layout>

<style>
    ul{
        display: flex;
        flex-direction: column;
        text-wrap: pretty;
        gap: 0.25rem;
        font-weight: 200;
        font-size: 0.8rem;
    }
    li{
        padding: 0.1rem;
    }
    h3{
        text-align: center;
        font-weight: 700;
        color: rgb(205, 155, 251);
    }
</style>